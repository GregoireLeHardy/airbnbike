<h1>Our beautiful Bikes</h1>

<h2><%= link_to "Add Bike", new_bike_path %></h2>
<h2><% @bikes.each do |bike| %></h2>
  <p><%= bike.name %></p>
  <p><%= bike.address %></p>
  <p><%= link_to "Edit", edit_bike_path(bike) %></p>
  <p><%= link_to "Delete", bike_path(bike),
  method: :delete %></p>
  <p><%= link_to "Book", new_bike_booking_path(bike) %></p>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 600px; padding-top: 50px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
