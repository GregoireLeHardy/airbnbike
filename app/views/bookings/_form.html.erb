<%= simple_form_for [@bike, @booking] do |f| %>
  <%= f.label :start_date, "Enter a Start Date" %>
  <%= f.input :start_date, input_html: { class: "datepicker", value: Date.today.strftime('%d-%m-%Y') } %>
  <%= f.label :end_date, "Enter a End Date" %>
  <%= f.input :end_date, input_html: { class: "datepicker", value: Date.today.strftime('%d-%m-%Y') } %>
  <%= f.submit %>
<% end %>


